@page "/products"

<h2 class="text-2xl font-semibold mb-4">T-Shirt Designs</h2>

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    @foreach (var shirt in products)
    {
        <div class="border border-gray-300 rounded p-4 shadow hover:shadow-lg transition">
            <img src="@shirt.ImageUrl" alt="@shirt.Name" class="w-full h-48 object-cover mb-2 rounded" />
            <h3 class="font-bold text-lg">@shirt.Name</h3>
            <p class="text-gray-600 mb-2">@shirt.Description</p>
            <p class="font-semibold mb-2">â‚±@shirt.Price</p>
            <a href="/checkout" class="bg-green-600 text-white px-3 py-1 rounded hover:bg-green-700">
                Buy Now
            </a>
        </div>
    }
</div>

@code {
    record Product(string Name, string Description, string ImageUrl, decimal Price);

    List<Product> products = new()
    {
        new("Gamer Tee", "Perfect for late night coding.", "/sample-data/tshirt1.jpg", 499),
        new("Coffee Coder", "Because you run on caffeine.", "/sample-data/tshirt2.jpg", 549),
        new("Debug Mode", "Stylish and nerdy.", "/sample-data/tshirt3.jpg", 599)
    };
}
