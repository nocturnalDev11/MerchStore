@page "/details"

<div class="mx-auto p-6 bg-white shadow-lg rounded-lg flex items-center justify-center">
    <div class="flex flex-col md:flex-row gap-6">
        <div class="w-full bg-gray-100 rounded-lg object-scale-down">
            <img src="images/shirt-1.webp" alt="Shirt" class="w-full h-auto">
        </div>
        <div class="w-full md:w-2/3">
            <div class="flex items-center gap-2 text-orange-600 mb-2">
                <a href="#" class="text-sm">Apparel / <span class="text-teal-600">T-Shirt</span></a>
            </div>
            <h1 class="text-4xl font-bold text-gray-900">Software Developer Shirt</h1>
            <p class="text-gray-600 mt-2">Lorem ipsum is simply dummy text of the printing and typesetting industry.</p>
            <div class="flex items-center gap-4 mt-4">
                <span class="text-2xl font-bold text-green-600">₱499.00</span>
            </div>
            <div class="flex items-center gap-2 mt-4">
                <div class="flex text-yellow-400">
                    <span>★</span><span>★</span><span>★</span><span>★</span><span>☆</span>
                </div>
                <span class="text-gray-600">1624 reviews</span>
            </div>
            <div class="mt-6">
                <h3 class="text-lg font-medium text-gray-700">Shirt Color</h3>
                <div class="flex gap-2 mt-2">
                    <button class="w-6 h-6 bg-black rounded-full"></button>
                </div>
            </div>
            <div class="mt-6">
                <h3 class="text-md font-medium text-gray-700">Size</h3>
                <div class="flex gap-2 mt-2">
                    <button class="w-10 h-10 bg-orange-200 rounded-full text-orange-800 font-semibold">XS</button>
                    <button class="w-10 h-10 bg-orange-200 rounded-full text-orange-800 font-semibold">S</button>
                    <button class="w-10 h-10 bg-orange-200 rounded-full text-orange-800 font-semibold">M</button>
                    <button class="w-10 h-10 bg-orange-200 rounded-full text-orange-800 font-semibold">L</button>
                    <button class="w-10 h-10 bg-orange-200 rounded-full text-orange-800 font-semibold">XL</button>
                    <button class="w-10 h-10 bg-orange-200 rounded-full text-orange-800 font-semibold">2XL</button>
                </div>
            </div>
            
            <div class="space-y-4">
                <div class="w-full mt-6 grid grid-cols-2 gap-4">
                    <div class="flex items-center justify-center border border-gray-300 rounded-lg">
                        <button class="w-10 h-10 text-gray-600">-</button>
                        <input type="number" value="1" class="w-16 h-10 text-center border-0 focus:ring-0">
                        <button class="w-10 h-10 text-gray-600">+</button>
                    </div>
                    <button class="bg-orange-600 text-white px-6 py-2 rounded-lg hover:bg-orange-700">Add To Cart</button>
                </div>
                <a href="/checkout" class="w-full block text-center bg-teal-500 text-white px-6 py-2 rounded-lg hover:bg-teal-600">Buy Now</a>
            </div>
        </div>
    </div>
</div>